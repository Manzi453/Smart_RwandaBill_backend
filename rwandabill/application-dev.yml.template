spring:
  datasource:
    url: jdbc:postgresql://localhost:5432/rwandabill
    username: postgres
    password: postgres
    driver-class-name: org.postgresql.Driver
  
  jpa:
    hibernate:
      ddl-auto: update
    properties:
      hibernate:
        dialect: org.hibernate.dialect.PostgreSQLDialect
        format_sql: true
    show-sql: true
  
  jackson:
    serialization:
      write-dates-as-timestamps: false
    default-property-inclusion: non_null

server:
  port: 8080
  servlet:
    context-path: /api

jwt:
  secret: dev-secret-key-change-this-in-production-with-a-strong-key-at-least-256-bits-long
  expiration: 86400000  # 24 hours

logging:
  level:
    root: INFO
    com.rwandabill: DEBUG
    org.springframework.security: DEBUG
